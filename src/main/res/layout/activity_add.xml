<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.debalina.personalpwm.AddActivity">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:elevation="6dp"
            android:background="#b812537f"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="#46e5f8ff"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/Rel1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/line1"
            android:background="#c313a4c1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon1"
                android:icon="@drawable/add"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:transitionName="test"
                android:layout_centerHorizontal="true"
                />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText1"
                android:hint="Enter Subject"
                android:focusable="true"
                android:textColorHighlight="#569df2f2"
                android:layout_marginTop="30dp"
                android:background="@drawable/editbox"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:layout_below="@+id/editText1"
                android:layout_marginTop="10dp"
                android:background="@drawable/editbox"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="UserID" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:layout_below="@+id/editText2"
                android:layout_marginTop="10dp"
                android:background="@drawable/editbox"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="Password" />

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText4"
                android:layout_toRightOf="@+id/editText3"
                android:layout_marginLeft="10dp"
                android:layout_alignBaseline="@id/editText3"
                android:background="@drawable/editbox"
                android:inputType="numberDecimal"
                android:text="0"
            />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retain renew days"
                android:layout_toRightOf="@id/editText4"
                android:layout_alignBaseline="@id/editText4"
                android:layout_marginLeft="15dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:id="@+id/button1"
                android:layout_below="@id/editText3"
                android:layout_alignLeft="@id/editText3"
                android:layout_alignStart="@id/editText3"
                android:layout_marginTop="10dp"
                android:onClick="AddProc"
                android:background="@drawable/custom_button" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:id="@+id/button2"
                android:layout_below="@id/editText3"
                android:layout_alignRight="@id/editText3"
                android:layout_alignEnd="@id/editText3"
                android:layout_marginTop="10dp"
                android:onClick="UpdateProc"
                android:background="@drawable/custom_button" />


        </RelativeLayout>
    </RelativeLayout>




